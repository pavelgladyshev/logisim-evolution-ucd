    "version": "0.2.0",
    "configurations": [
        { 
            "name": "Remote GDB Debugging",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "stopAtConnect": true,
            "program": "${workspaceFolder}/kernel.elf", // Path to your executable
            "miDebuggerPath": "/opt/homebrew/bin/riscv64-elf-gdb", // Path to GDB
            "setupCommands": [
                {
                    "text": "set arch riscv", // Replace with your remote target IP and port
                    "description": "Set target ISA architecture to risc-v",
                    "ignoreFailures": false
                },
                {
                    "text": "target remote :3333", // Replace with your remote target IP and port
                    "description": "Connect to remote target",
                    "ignoreFailures": false
                }
            ],
        }
    ]
}